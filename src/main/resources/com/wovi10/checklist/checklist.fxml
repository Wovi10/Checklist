<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<VBox fx:id="vBox"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.wovi10.checklist.ChecklistController"
      prefHeight="400.0" prefWidth="600.0" spacing="10">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
        <Button text="Add" onAction="#onAddButtonClick" alignment="TOP_LEFT" />
        <Pane fx:id="spacer" prefWidth="10" prefHeight="10" />
        <Button text="Clear" onAction="#onClearButtonClick" alignment="TOP_RIGHT" />
    </HBox>
    <VBox fx:id="checklist_Group" spacing="10">
    </VBox>
</VBox>
