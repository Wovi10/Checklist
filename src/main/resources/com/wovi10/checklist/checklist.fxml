<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="vBox"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.wovi10.checklist.ChecklistController"
      prefHeight="400.0" prefWidth="600.0" spacing="10">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Button text="Add" onAction="#onAddButtonClick" />
    <VBox fx:id="checklist_Group" spacing="10">
        <HBox fx:id="group_Item">
            <CheckBox fx:id="item_CB" />
            <TextField fx:id="item_Name" />
        </HBox>
    </VBox>
</VBox>
